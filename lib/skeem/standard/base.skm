; Standard R7RS procedures from section 6.2.6
(define zero?
  (lambda (z)
    (if (= z 0)
      #t
      #f)))

; Return true if x greater or equal to zero; false otherwise
(define positive?
  (lambda (x)
    (if (>= x 0)
      #t
      #f)))

(define negative?
  (lambda (x)
    (if (< x 0)
      #t
      #f)))

; For backwards compatibility
(define modulo
  (lambda (x y)
    (floor-remainder x y)))

(define odd?
  (lambda (n)
    (if (= (modulo n 2) 1)
      #t
      #f)))

(define even?
  (lambda (n)
    (if (= (modulo n 2) 0)
      #t
      #f)))

(define abs
  (lambda (x)
    (if (positive? x)
      x
      (- x))))

(define square
  (lambda (z)
    (* z z)))

(define list
  (lambda args args))